<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoXamarin.Views.DetailAccountView"
             Title="Cuenta">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding CurrentBankAccount.Name}" Placeholder="Nombre" Margin="15,10" VerticalOptions="Start"/>
            <Button Text="Ok" Margin="15,10" Command="{Binding EnterRegisterCommand}"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>